<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThreadsStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="android:windowBackground">@color/white_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/menuItemTheme</item>
    </style>
    <style name="menuItemTheme">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TimestampStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:paddingBottom">@dimen/margin_three_fourth</item>
    </style>

    <style name="MessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingBottom">@dimen/margin_material</item>
        <item name="android:paddingLeft">@dimen/margin_half</item>
        <item name="android:paddingRight">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingBottom">@dimen/margin_quarter</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:paddingRight">@dimen/margin_big</item>
        <item name="android:paddingTop">@dimen/margin_quarter</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.BottomSheetButtonsStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:paddingBottom">36dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>
</resources>