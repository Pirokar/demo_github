<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThreadsStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="android:windowBackground">@color/white_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/menuItemTheme</item>

    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_light</item>
        <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--<style name="FileDialogStyle" parent="Theme.AppCompat.Light.Dialog">-->
        <!--<item name="android:textColor">@color/file_browser_dialog_text</item>-->
        <!--<item name="android:windowBackground">@color/file_browser_window_background</item>-->
    <!--</style>-->

    <style name="FileDialogStyleTransparent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="ThreadsStyleConsultPage" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--  <item name="colorPrimaryDark">@color/black_transparent</item>-->
        <item name="android:windowBackground">@color/white_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>

        <item name="android:itemTextAppearance">@style/menuItemTheme</item>

    </style>

    <style name="ThreadsGalleryStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#282828</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/menuItemThemeDark</item>

    </style>

    <style name="menuItemTheme">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="menuItemThemeDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#282828</item>
    </style>

    <style name="TimestampStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:paddingBottom">@dimen/margin_three_fourth</item>
    </style>


    <style name="MessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingBottom">@dimen/margin_material</item>
        <item name="android:paddingLeft">@dimen/margin_half</item>
        <item name="android:paddingRight">@dimen/margin_half</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingBottom">@dimen/margin_quarter</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:paddingRight">@dimen/margin_big</item>
        <item name="android:paddingTop">@dimen/margin_quarter</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.Borderless.BottomSheetButtonsStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:paddingBottom">36dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CircularProgressButtonStyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="bottomButtonTransparent">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="timestamp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_half</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="userBubble">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/user_margin_left</item>
        <item name="android:layout_marginRight">@dimen/user_margin_right</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:paddingRight">@dimen/margin_half</item>
    </style>

    <style name="consultBubble">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/consultant_margin_left</item>
        <item name="android:layout_marginRight">@dimen/consultant_margin_right</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>

        <item name="android:paddingRight">@dimen/margin_half</item>
    </style>
</resources>