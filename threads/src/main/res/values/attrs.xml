<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularProgressButton">
        <attr name="completed_drawable" format="reference"/>
        <attr name="start_download_label" format="reference"/>
        <attr name="in_progress_label" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BubbleMessageTextView">
        <attr name="last_line_extra_padding_symbols" format="integer"/>
    </declare-styleable>

    <attr name="shimmerLayoutStyle" format="reference" />
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_duration" format="integer|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_width" format="dimension|reference"/>
        <attr name="shimmer_center_width" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="VoiceRecordView">
        <attr name="slide_to_cancel_text" format="string" />
        <attr name="slide_to_cancel_arrow" format="reference" />
        <attr name="slide_to_cancel_margin_right" format="dimension" />
        <attr name="slide_to_cancel_bounds" format="dimension" />
        <attr name="slide_to_cancel_arrow_color" format="color" />
        <attr name="cancel_text" format="string" />
        <attr name="cancel_text_color" format="color" />
        <attr name="cancel_text_margin_right" format="dimension" />
        <attr name="counter_time_color" format="color" />

    </declare-styleable>

    <declare-styleable name="VoiceRecordButton">

        <attr name="mic_icon" format="reference" />
        <attr name="send_icon" format="reference" />
        <attr name="scale_up_to" format="float" />

    </declare-styleable>

    <declare-styleable name="VoiceRecordLockView">

        <attr name="circle_color" format="color" />
        <attr name="circle_locked_color" format="color" />
        <attr name="lock_color" format="color" />

    </declare-styleable>
</resources>