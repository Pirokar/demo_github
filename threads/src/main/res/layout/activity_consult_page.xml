<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_root"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/blank_avatar_round"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_gradient_black_top_bottom"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp" />



    <TextView
        android:textSize="@dimen/text_medium"
        android:id="@+id/consult_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:background="@drawable/background_gradient_black_bottom_top"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/margin_big"
        android:paddingTop="100dp"
        android:textColor="@android:color/white"
       />

    <TextView
        android:padding="@dimen/margin_big"
        android:id="@+id/consult_moto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:textSize="@dimen/text_regular"
        android:textColor="@android:color/black" />

</RelativeLayout>