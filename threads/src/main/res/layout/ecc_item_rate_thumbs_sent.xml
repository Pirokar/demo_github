<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/bubble"
        style="@style/userBubble"
        android:paddingEnd="24dp"
        android:paddingStart="0dp"
        android:layout_marginBottom="@dimen/ecc_margin_half"
        android:background="@drawable/ecc_outgoing_bubble">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/ecc_binary_survey_like_selected"
            app:tint="@color/ecc_outgoing_message_text"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ecc_margin_half" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_toEndOf="@+id/thumb"
            tools:text="@string/ecc_item_user_rate_header"
            android:textColor="@color/ecc_outgoing_message_text" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timestamp"
            style="@style/timestamp"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/header"
            android:layout_below="@+id/header"
            android:drawablePadding="@dimen/ecc_margin_quarter"
            android:layout_marginTop="@dimen/ecc_margin_quarter"
            android:textColor="@color/ecc_user_message_timestamp"
            tools:text="10:19" />

    </RelativeLayout>
</RelativeLayout>