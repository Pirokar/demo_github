<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize">

    <im.threads.ui.widget.CustomFontEditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/searchClearButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/ecc_search_bar_side_margins"
        android:background="@null"
        android:layout_marginBottom="9dp"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:lines="1"
        android:textColor="@color/ecc_chat_toolbar_text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/ecc_text_big"/>

    <ImageButton
        android:id="@+id/searchClearButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchInput"
        app:layout_constraintBottom_toBottomOf="@id/searchInput"
        android:layout_marginEnd="@dimen/ecc_search_bar_side_margins"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/searchProgressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.45"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchInput"
        app:layout_constraintBottom_toBottomOf="@id/searchInput"
        android:layout_marginEnd="@dimen/ecc_search_bar_side_margins"
        android:indeterminateOnly="true"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>