<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/threads_blue_eff3f8">

    <ImageView
        android:id="@+id/welcome_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"/>

    <im.threads.widget.text_view.PlaceholderTitleTextView
        android:id="@+id/welcome_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_material"
        android:layout_marginRight="@dimen/margin_material"
        android:layout_marginTop="@dimen/margin_half"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/threads_title_text"
        android:textColor="@color/threads_gray_text"/>

    <im.threads.widget.text_view.PlaceholderSubtitleTextView
        android:id="@+id/welcome_subtitle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="@dimen/margin_quarter"
        android:gravity="center"
        android:text="@string/threads_subtitle_text"
        android:textColor="@color/threads_gray_text"/>
</LinearLayout>