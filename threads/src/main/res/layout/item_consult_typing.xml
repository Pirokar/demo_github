<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_chat_row_height"
    android:layout_marginTop="@dimen/margin_material">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/threads_system_operator_photo_size"
        android:layout_height="@dimen/threads_system_operator_photo_size"
        android:padding="@dimen/margin_half"
        android:visibility="gone" />

    <im.threads.internal.widget.text_view.TypingTextView
        android:id="@+id/typing_in_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/threads_chat_system_message"
        android:text="@string/threads_typing"
        android:textSize="@dimen/text_medium" />

</RelativeLayout>