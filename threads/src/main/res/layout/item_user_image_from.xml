<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/loaderLayout"
        style="@style/userBubble"
        android:layout_gravity="end"
        android:background="@drawable/thread_outgoing_bubble"
        android:paddingEnd="17dp"
        android:paddingStart="0dp">

        <ImageView
            android:id="@+id/loader"
            android:layout_width="@dimen/threads_operator_photo_size"
            android:layout_height="@dimen/threads_operator_photo_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_big"
            app:srcCompat="@drawable/im_loading" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/user_margin_left"
        android:layout_marginTop="@dimen/margin_quarter"
        android:layout_marginEnd="@dimen/user_margin_right"
        android:layout_marginBottom="@dimen/margin_quarter"
        android:minWidth="240dp"
        android:minHeight="240dp"
        android:scaleType="fitCenter" />

    <im.threads.internal.widget.text_view.BubbleTimeTextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/consultant_margin_right"
        android:layout_marginBottom="@dimen/margin_half"
        android:background="@drawable/timestamp_outgoing_underlayer"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        tools:text="10:19"
        android:textColor="@color/threads_outgoing_message_time" />

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/threads_chat_highlighting"/>

</FrameLayout>