<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/loaderLayout"
            style="@style/userBubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="17dp">

            <ImageView
                android:id="@+id/loader"
                android:layout_width="@dimen/threads_operator_photo_size"
                android:layout_height="@dimen/threads_operator_photo_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_material"
                android:layout_marginTop="@dimen/margin_material"
                android:layout_marginEnd="@dimen/margin_three_fourth"
                android:layout_marginBottom="@dimen/margin_material"/>

            <View
                android:id="@+id/delimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_quarter"
                android:background="@color/threads_outgoing_message_text" />

            <im.threads.ui.widget.textView.BubbleMessageTextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_big"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/threads_outgoing_message_text"
                tools:text="ddddddddddddddd.pdf" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/commonLayout"
            android:layout_width="@dimen/message_image_size"
            android:layout_height="@dimen/message_image_size"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_marginEnd="@dimen/threads_operator_photo_size"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:layout_alignParentEnd="true"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/imageBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/thread_outgoing_bubble"/>

            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/commonLayout"
            android:layout_alignEnd="@id/commonLayout"
            android:layout_marginEnd="@dimen/timeLabelMarginRight"
            android:layout_marginBottom="@dimen/timeLabelMarginBottom"
            android:background="@drawable/timestamp_outgoing_underlayer"
            android:drawablePadding="@dimen/margin_half"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/threads_outgoing_message_time"
            tools:text="10:19"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_half"
        android:layout_marginEnd="@dimen/consultant_margin_right"
        android:gravity="end"
        android:textColor="@color/threads_error_red_df0000"
        android:textSize="@dimen/error_text_size"
        android:visibility="gone"
        tools:text="Some error text"
        tools:visibility="visible" />

</LinearLayout>