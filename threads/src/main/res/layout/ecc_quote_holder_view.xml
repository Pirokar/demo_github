<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start">

    <ImageView
        android:id="@+id/delimiterImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/ecc_quote" />

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/ecc_margin_quarter"
        android:contentDescription="@string/ecc_quote" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quoteImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ecc_margin_three_fourth"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_half"
            android:contentDescription="@string/ecc_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ecc_margin_three_fourth"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_marginEnd="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_half"
            android:orientation="vertical">

            <im.threads.ui.widget.textView.QuoteAuthorTextView
                android:id="@+id/quoteAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/ecc_padding_material"
                android:textStyle="bold"
                tools:text="Иван Петров" />

            <im.threads.ui.widget.textView.QuoteMessageTextView
                android:id="@+id/quoteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ecc_margin_quarter"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="счет на оплату 1,2mb 436666666666364" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>