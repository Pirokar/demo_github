<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bubble"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/filter_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_quarter"
        android:layout_below="@+id/filter" />

   <ImageView
    android:id="@+id/bubble_1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_alignRight="@+id/bubble"
    android:layout_alignLeft="@+id/bubble"
    android:layout_alignBottom="@+id/bubble"
    android:layout_alignTop="@+id/bubble"
    android:src="@drawable/a_user_bubble"
    android:scaleType="fitXY" />

    <RelativeLayout

        android:id="@+id/bubble"
        style="@style/userBuble"
        android:paddingRight="17dp">


        <im.threads.views.CircularProgressButton
            android:id="@+id/button_download"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_half"
            android:background="@drawable/file_image_user"
            app:completed_drawable="@drawable/file_image_user"
            app:in_progress_label="@drawable/ic_clear_blue_user_36dp"
            app:start_download_label="@drawable/ic_vertical_align_bottom_user_24dp" />

        <im.threads.widget.CustomFontTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_toRightOf="@+id/button_download"
            android:text="счетddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd.pdf"
            android:textColor="@android:color/white" />


        <im.threads.widget.CustomFontTextView

            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_toRightOf="@+id/button_download"
            android:paddingBottom="@dimen/margin_half"
            android:text="1,2 mb"
            android:textColor="@android:color/white" />

        <im.threads.widget.CustomFontTextView
            android:id="@+id/timestamp"
            style="@style/timestamp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/header"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/margin_quarter"
            android:text="10:19" />

    </RelativeLayout>


</RelativeLayout>