<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="chatText"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:id="@+id/bubble"
        style="@style/userBubble"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="0dp"
        android:paddingEnd="17dp">

        <FrameLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="@dimen/threads_file_icon_size"
            android:layout_height="@dimen/threads_file_icon_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_material"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_material">

            <im.threads.ui.views.CircularProgressButton
                android:id="@+id/buttonDownload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ecc_ic_file_outline_24dp"
                app:completed_drawable="@drawable/ecc_ic_file_outline_24dp"
                app:in_progress_label="@drawable/ecc_ic_clear_36dp"
                app:start_download_label="@drawable/ecc_ic_vertical_align_bottom_18dp" />

            <ImageView
                android:id="@+id/loader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

        </FrameLayout>

        <View
            android:id="@+id/delimiter"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_quarter"
            android:layout_toEndOf="@+id/buttonsLayout"
            android:background="@color/threads_outgoing_message_text"
            android:minHeight="70dp" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_toEndOf="@+id/delimiter"
            android:textColor="@color/threads_outgoing_message_text"
            tools:text="счетddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd.pdf" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_toEndOf="@+id/delimiter"
            android:text="1,2 mb"
            android:textColor="@color/threads_outgoing_message_text"
            android:textSize="@dimen/error_text_size" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_half"
            android:layout_marginBottom="@dimen/margin_half"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ecc_timestamp_outgoing_underlayer"
            android:drawablePadding="@dimen/margin_half"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/threads_outgoing_message_time"
            tools:text="10:19" />

    </RelativeLayout>

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_quarter"
        android:layout_marginEnd="@dimen/consultant_margin_right"
        android:gravity="end"
        android:textColor="@color/threads_error_red_df0000"
        android:textSize="@dimen/error_text_size"
        android:visibility="gone"
        tools:text="Some error text"
        tools:visibility="visible" />

</LinearLayout>