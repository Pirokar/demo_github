<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/bubble"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/user_margin_left"
        android:layout_marginRight="@dimen/user_margin_right"
        android:layout_marginTop="@dimen/margin_quarter"
        android:background="@drawable/bubble_blue"
        android:paddingRight="@dimen/margin_three_fourth">


        <com.sequenia.threads.views.CircularProgressButton
            android:layout_centerVertical="true"
            android:id="@+id/button_download"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_gravity="center_vertical"
            app:completed_drawable="@drawable/ic_insert_file_white_36dp"
            app:in_progress_label="@drawable/ic_clear_blue_36dp"
            app:start_download_label="@drawable/ic_vertical_align_bottom_24dp"
            android:background="@drawable/ic_insert_file_white_36dp" />

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_half"
            android:layout_toRightOf="@+id/button_download"
            android:text="счетddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd.pdf"
            android:textColor="@android:color/white" />


        <TextView

            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_half"
            android:layout_marginTop="@dimen/margin_quarter"
            android:layout_toRightOf="@+id/button_download"
            android:paddingBottom="@dimen/margin_half"
            android:text="1,2 mb"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/header"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/margin_quarter"
            android:paddingBottom="@dimen/margin_half"
            android:text="10:19"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bubble"
        android:layout_alignParentTop="true"
        android:background="@color/blue_transparent" />

    <View
        android:id="@+id/filter_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_quarter"
        android:layout_below="@+id/filter"
        android:background="@color/blue_transparent" />
</RelativeLayout>