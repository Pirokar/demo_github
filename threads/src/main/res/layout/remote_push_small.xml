<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/icon_large_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_three_fourth"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/icon_large"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_three_fourth"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/icon_small_corner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/icon_large"
        android:layout_alignRight="@+id/icon_large" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_quarter"
        android:layout_marginTop="@dimen/margin_half"
        android:layout_toRightOf="@+id/icon_large"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consult_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView

            android:id="@+id/attach_image"
            android:layout_width="18sp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#90000000"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>