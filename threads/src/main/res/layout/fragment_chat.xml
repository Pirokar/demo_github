<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="inputTextObservable" type="androidx.databinding.ObservableField&lt;String>"/>
    </data>

    <RelativeLayout
        android:id="@+id/chat_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/threads_chat_background">

        <im.threads.internal.widget.CustomFontButton
            android:id="@+id/search_more"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_big"
            android:background="@android:color/transparent"
            android:text="@string/threads_search_more"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/chat_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true">

            <im.threads.internal.views.MySwipeRefreshLayout
                android:id="@+id/swipe_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:clipToPadding="false"/>

            </im.threads.internal.views.MySwipeRefreshLayout>

            <im.threads.internal.views.WelcomeScreen
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scroll_down_button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_layout"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/threads_scroll_down_button_margin"
            tools:visibility="visible"
            android:visibility="gone">

            <ImageView
                android:id="@+id/scroll_down_button"
                android:layout_width="@dimen/threads_scroll_down_button_width"
                android:layout_height="@dimen/threads_scroll_down_button_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:elevation="@dimen/threads_scroll_down_button_elevation"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/threads_scroll_down_background"
                app:srcCompat="@drawable/threads_scroll_down_icon" />

            <View
                android:id="@+id/unread_msg_sticker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:elevation="@dimen/threads_scroll_down_button_elevation"
                android:background="@drawable/circle_red" />

            <im.threads.internal.widget.CustomFontTextView
                android:id="@+id/unread_msg_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/unread_msg_sticker"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:elevation="@dimen/threads_scroll_down_button_elevation"
                android:gravity="center"
                android:textColor="@color/threads_chat_unread_msg_count_text"
                android:textSize="@dimen/text_small"
                tools:text="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/threads_input_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/quote_layout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/quote_past"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_reply_gray_24dp" />

                <ImageView
                    android:id="@+id/quote_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:minWidth="1dp"
                    android:padding="@dimen/margin_half"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <im.threads.internal.widget.text_view.InputQuotedMessageAuthorTextView
                        android:id="@+id/quote_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/threads_incoming_message_text"
                        tools:text="title_title_title"
                        android:textSize="@dimen/text_medium" />

                    <im.threads.internal.widget.text_view.InputQuotedMessageTextView
                        android:id="@+id/quote_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="text_text_text_text_text_text_text_text_text_text_text_text_text_text_text_text"
                        android:textColor="@color/threads_incoming_message_text" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/quote_clear"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_clear_blue_user_36dp" />

            </LinearLayout>

            <View
                android:id="@+id/delimeter"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:visibility="visible" />

            <im.threads.internal.views.MaxHeightRecyclerView
                android:id="@+id/quick_replies_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/threads_quick_replies_background"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/threads_input_background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/add_attachment"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="60dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/threads_ic_attachment_button" />

                <im.threads.internal.widget.CustomFontEditText
                    android:id="@+id/input_edit_view"
                    style="@style/InputEditTextStyle"
                    android:hint="@string/threads_input_hint"
                    android:inputType="textCapSentences|textMultiLine"
                    android:text="@={inputTextObservable}"
                    android:maxLines="7" />

                <ImageButton
                    android:id="@+id/send_message"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/threads_ic_send_button" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/toolbar_shadow" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/threads_chat_toolbar"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/chat_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/copy_controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="36dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageButton
                        android:id="@+id/reply"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-60dp"
                        android:background="@null"
                        app:srcCompat="@drawable/ic_reply_blue_30dp" />

                    <ImageButton
                        android:id="@+id/content_copy"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/margin_big"
                        android:background="@null"
                        app:srcCompat="@drawable/ic_content_copy_blue_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/consult_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="@dimen/margin_quarter"
                    android:layout_marginBottom="@dimen/margin_quarter"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <im.threads.internal.widget.text_view.ToolbarTitleTextView
                        android:id="@+id/consult_name"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/threads_chat_toolbar_text"
                        android:textSize="@dimen/text_big"
                        tools:text="@string/threads_searching_operator" />

                    <im.threads.internal.widget.text_view.ToolbarSubtitleTextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/threads_chat_toolbar_text"
                        android:textSize="@dimen/text_regular"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/search_lo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <im.threads.internal.widget.CustomFontEditText
                            android:id="@+id/search"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/search_up_ib"
                            android:background="@null"
                            android:hint="@string/threads_search_messages"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:lines="1"
                            android:textColor="@color/threads_chat_toolbar_text"
                            android:textColorHint="@color/threads_chat_toolbar_hint"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/text_big"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/search_up_ib"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/search_down_ib"
                            android:alpha="0.5"
                            app:backgroundTint="@android:color/transparent"
                            app:srcCompat="@drawable/ic_expand_more_white_24dp" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/search_down_ib"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/margin_half"
                            android:alpha="0.5"
                            app:backgroundTint="@android:color/transparent"
                            app:srcCompat="@drawable/ic_expand_less_white_24dp" />

                    </RelativeLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/popup_menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    app:srcCompat="@drawable/ic_more_vert_white_24dp_chat" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

</layout>
