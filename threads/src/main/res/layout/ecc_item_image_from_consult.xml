<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ecc_margin_half">

        <ImageView
            android:id="@+id/consultAvatar"
            android:layout_width="@dimen/ecc_operator_photo_size"
            android:layout_height="@dimen/ecc_operator_photo_size"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:id="@+id/loaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ecc_margin_big"
            android:layout_toEndOf="@id/consultAvatar"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/loader"
                android:layout_width="@dimen/ecc_operator_photo_size"
                android:layout_height="@dimen/ecc_operator_photo_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/ecc_margin_material"
                android:layout_marginTop="@dimen/ecc_margin_material"
                android:layout_marginEnd="@dimen/ecc_margin_three_fourth"
                android:layout_marginBottom="@dimen/ecc_margin_material" />

            <View
                android:id="@+id/delimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ecc_margin_quarter"
                android:layout_marginBottom="@dimen/ecc_margin_quarter"
                android:background="@color/ecc_incoming_message_text" />

            <im.threads.ui.widget.textView.BubbleMessageTextView
                android:id="@+id/fileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecc_margin_three_fourth"
                android:layout_marginTop="@dimen/ecc_margin_half"
                android:layout_marginEnd="@dimen/ecc_margin_half"
                android:layout_marginBottom="@dimen/ecc_margin_half"
                android:ellipsize="end"
                android:maxLines="5"
                android:textColor="@color/ecc_incoming_message_text"
                tools:text="ddddddddddd.pdf" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageLayoutWithSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/ecc_operator_photo_size"
                android:layout_height="1dp"
                android:background="@color/ecc_transparent"/>

            <FrameLayout
                android:id="@+id/imageLayout"
                android:layout_width="@dimen/ecc_message_image_size"
                android:layout_height="@dimen/ecc_message_image_size"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/imageBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/loaderImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="75dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <im.threads.ui.widget.textView.BubbleTimeTextView
                    android:id="@+id/timeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="@dimen/ecc_timeLabelMarginRight"
                    android:layout_marginBottom="@dimen/ecc_timeLabelMarginBottom"
                    android:background="@drawable/ecc_incoming_underlayer"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/ecc_incoming_message_time"
                    tools:text="10:19" />

            </FrameLayout>
        </LinearLayout>

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timeStampLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/loaderLayout"
            android:layout_alignEnd="@id/loaderLayout"
            android:layout_marginEnd="@dimen/ecc_timeLabelMarginRight"
            android:layout_marginBottom="@dimen/ecc_timeLabelMarginBottom"
            android:background="@drawable/ecc_incoming_underlayer"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/ecc_incoming_message_time"
            tools:text="10:19" />

    </RelativeLayout>

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_marginStart="@dimen/ecc_consultant_margin_right"
        android:textSize="@dimen/ecc_error_text_size"
        android:visibility="gone"
        tools:text="Some error text"
        tools:visibility="visible" />

</LinearLayout>

