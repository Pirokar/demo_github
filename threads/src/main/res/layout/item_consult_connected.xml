<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:src="@drawable/sample_consult_avatar_big" />

    <TextView
        android:id="@+id/quote_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_material"
        android:text="Мария Павлова"
        android:textColor="@color/gray_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_header"
        android:layout_marginLeft="108dp"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_quarter"
        android:text="подключилась к диалогу в 10:21"
        android:textColor="@color/gray_text" />
</RelativeLayout>