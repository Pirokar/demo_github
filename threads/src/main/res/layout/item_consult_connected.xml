<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="64dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/consultant_system_photo_size"
        android:layout_height="@dimen/consultant_system_photo_size"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_centerVertical="true"/>

    <im.threads.widget.text_view.SpecialistConnectTitleTextView
        android:id="@+id/quote_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/margin_material"
        android:layout_marginTop="10dp"
        tools:text="Мария Павлова"
        android:textColor="@color/threads_gray_text"
        android:textSize="18sp" />

    <im.threads.widget.text_view.SpecialistConnectSubtitleTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_header"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="@dimen/margin_material"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_quarter"
        tools:text="подключилась к диалогу в 10:21"
        android:textColor="@color/threads_gray_text" />
</RelativeLayout>