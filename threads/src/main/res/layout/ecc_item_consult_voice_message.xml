<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubble"
        style="@style/consultBubble"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/consultAvatar"
        app:layout_constraintTop_toTopOf="parent">

        <im.threads.ui.views.QuoteHolderView
            android:id="@+id/quoteView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/ecc_margin_half"
            android:paddingBottom="@dimen/ecc_margin_half"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonsStartGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/ecc_margin_zero"
            app:layout_constraintTop_toBottomOf="@id/quoteView" />

        <ImageButton
            android:id="@+id/voiceMessageConsultButtonPlayPause"
            android:layout_width="@dimen/ecc_file_icon_size"
            android:layout_height="@dimen/ecc_file_icon_size"
            android:layout_marginEnd="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_three_fourth"
            android:background="@null"
            android:contentDescription="@string/ecc_play_button"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@id/buttonsStartGuideline"
            app:layout_constraintTop_toBottomOf="@id/quoteView"
            app:srcCompat="@drawable/ecc_voice_message_play"
            tools:background="@color/ecc_toolbar_gray" />

        <ImageView
            android:id="@+id/loader"
            android:layout_width="@dimen/ecc_file_icon_size"
            android:layout_height="@dimen/ecc_file_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_three_fourth"
            android:contentDescription="@string/ecc_loading_animation"
            app:layout_constraintStart_toEndOf="@id/buttonsStartGuideline"
            app:layout_constraintTop_toBottomOf="@id/quoteView" />

        <com.google.android.material.slider.Slider
            android:id="@+id/voiceMessageConsultSlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-11dp"
            android:theme="@style/ThemeOverlay.ChatCenter.Slider.Consult"
            app:haloRadius="@dimen/ecc_halo_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/voiceMessageConsultButtonPlayPause"
            app:layout_constraintTop_toTopOf="@id/voiceMessageConsultButtonPlayPause"
            app:thumbRadius="@dimen/ecc_thumb_size" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/voiceMessageConsultAudioStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/voiceMessageConsultSlider"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_half"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/ecc_voice_message_is_processing"
            android:textColor="@color/ecc_incoming_message_text"
            android:textSize="@dimen/ecc_text_small"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/voiceMessageConsultSlider"
            app:layout_constraintStart_toStartOf="@id/voiceMessageConsultSlider"
            app:layout_constraintTop_toBottomOf="@id/voiceMessageConsultSlider"
            tools:visibility="visible" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:layout_marginTop="-10dp"
            android:textColor="@color/ecc_incoming_message_text"
            android:textSize="@dimen/ecc_text_small"
            app:layout_constraintStart_toStartOf="@id/voiceMessageConsultSlider"
            app:layout_constraintTop_toBottomOf="@id/voiceMessageConsultSlider"
            tools:text="1:20" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ecc_margin_material"
            android:drawablePadding="@dimen/ecc_margin_half"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/ecc_margin_half"
            android:paddingBottom="@dimen/ecc_margin_half"
            android:textColor="@color/ecc_user_message_timestamp"
            app:layout_constraintEnd_toEndOf="@id/voiceMessageConsultSlider"
            app:layout_constraintTop_toBottomOf="@id/voiceMessageConsultText"
            tools:text="10:19" />

        <im.threads.ui.widget.textView.QuoteMessageTextView
            android:id="@+id/voiceMessageConsultText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ecc_margin_material"
            android:ellipsize="end"
            android:paddingBottom="@dimen/ecc_margin_half"
            android:textColor="@color/ecc_incoming_message_text"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/voiceMessageConsultButtonPlayPause"
            app:layout_constraintTop_toBottomOf="@+id/voiceMessageConsultButtonPlayPause"
            tools:text="счет на оплату очень длинное название очень длинное название очень длинное название или счет на оплату очень длинное название очень длинное название очень длинное название" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/errorText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ecc_error_text_size"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/timeStamp"
            app:layout_constraintStart_toStartOf="@id/voiceMessageConsultButtonPlayPause"
            app:layout_constraintTop_toBottomOf="@id/voiceMessageConsultText"
            tools:text="Some error text"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/consultAvatar"
        android:layout_width="@dimen/ecc_operator_photo_size"
        android:layout_height="@dimen/ecc_operator_photo_size"
        android:layout_marginStart="@dimen/ecc_margin_half"
        android:contentDescription="@string/ecc_operator_avatar"
        app:layout_constraintBottom_toBottomOf="@id/bubble"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>