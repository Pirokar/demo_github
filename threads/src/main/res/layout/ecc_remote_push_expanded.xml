<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/icon_large_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/ecc_margin_three_fourth"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/icon_large"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/ecc_margin_three_fourth"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/icon_small_corner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/icon_large"
        android:layout_alignRight="@+id/icon_large" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/ecc_margin_quarter"
        android:layout_marginTop="@dimen/ecc_margin_half"
        android:layout_toRightOf="@+id/icon_large"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consult_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/attach_image"
            android:layout_width="18sp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#90000000"
            android:textSize="12sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/delimeter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/icon_large"
        android:background="#c3c3c3" />

    <Button
        android:id="@+id/reply"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/delimeter"
        android:layout_marginLeft="-40dp"
        android:background="@null"
        android:drawableLeft="@drawable/ecc_ic_reply_gray_24dp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/ecc_text_small" />

</RelativeLayout>