<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bubble"
        style="@style/userBubble"
        android:layout_marginBottom="@dimen/ecc_margin_half"
        android:background="@drawable/ecc_outgoing_bubble"
        android:paddingEnd="24dp"
        android:paddingStart="0dp">

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/star"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ecc_options_survey_selected" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/rate_stars_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ecc_margin_quarter"
                android:orientation="horizontal">

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="@string/ecc_item_user_rate_text"
                    android:textColor="@color/ecc_outgoing_message_text"/>

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/total_stars_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/ecc_outgoing_message_text"
                    tools:text="5"/>

            </LinearLayout>
        </LinearLayout>

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_toEndOf="@+id/image_layout"
            android:textColor="@color/ecc_outgoing_message_text"
            tools:text="@string/ecc_item_user_rate_header" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timestamp"
            style="@style/timestamp"
            android:layout_below="@+id/header"
            android:layout_alignEnd="@+id/header"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/ecc_margin_quarter"
            android:drawablePadding="@dimen/ecc_margin_quarter"
            tools:text="10:19"
            android:textColor="@color/ecc_user_message_timestamp" />
    </RelativeLayout>
</RelativeLayout>