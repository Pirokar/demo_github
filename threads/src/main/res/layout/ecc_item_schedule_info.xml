<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <FrameLayout
        android:layout_width="@dimen/ecc_default_chat_row_height"
        android:layout_height="@dimen/ecc_default_chat_row_height"
        android:layout_marginLeft="@dimen/ecc_margin_material"
        android:background="@drawable/circle_aqua_outline"
        android:padding="14dp">

        <ImageView
            android:id="@+id/schedule_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ecc_schedule_icon"/>
    </FrameLayout>

    <im.threads.ui.widget.textView.ScheduleAlertTextView
        android:id="@+id/schedule_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ecc_margin_half"
        android:layout_marginRight="@dimen/ecc_margin_material"
        android:textColor="@color/ecc_schedule_text"
        android:textSize="18sp"
        tools:text="Сегодня чат не работает. Все операторы отдыхают. Будем доступны завтра с 10:00 до 18:00."/>

</LinearLayout>