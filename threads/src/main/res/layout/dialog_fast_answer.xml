<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_root"
    android:background="@color/threads_chat_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@color/threads_chat_toolbar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/consult_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_half" />

        <im.threads.widget.CustomFontTextView
            android:id="@+id/consult_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_half"
            android:text="Иван Иванович Иванов"
            android:textColor="@color/threads_chat_toolbar_text"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

    <im.threads.widget.CustomFontTextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@color/threads_quick_reply_message_background"
        android:gravity="center"
        android:minHeight="120dp"
        android:padding="@dimen/margin_material"
        android:textColor="@color/threads_quick_reply_message_text_color"
        android:textSize="@dimen/text_medium" />

    <LinearLayout
        android:id="@+id/answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:gravity="center_vertical"
        android:background="@color/threads_input_background">

        <im.threads.widget.CustomFontEditText
            android:id="@+id/answer"
            style="@style/InputEditTextStyle"
            android:maxLines="5"
            android:layout_marginLeft="@dimen/margin_big"/>

        <ImageButton
            android:id="@+id/send"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="right|bottom"
            android:background="@android:color/transparent"
            android:src="@drawable/threads_ic_send_button" />
    </LinearLayout>

    <im.threads.widget.CustomFontButton
        android:id="@+id/close_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="140dp"
        android:layout_height="56dp"
        android:layout_below="@+id/answer_layout"
        android:layout_marginBottom="@dimen/margin_half"
        android:text="@string/threads_close"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignTop="@id/close_button"
        android:background="@android:color/darker_gray" />
</RelativeLayout>