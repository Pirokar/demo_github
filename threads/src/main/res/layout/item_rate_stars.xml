<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:id="@+id/top_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/threads_grey_aaa" />

    <im.threads.widget.text_view.BubbleMessageTextView
        android:id="@+id/ask_for_rate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/threads_gray_text"
        android:text="@string/threads_ask_to_rate"
        android:gravity="center"/>

    <im.threads.widget.Rating
        android:id="@+id/mark"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical">
    </im.threads.widget.Rating>

    <im.threads.widget.text_view.BubbleMessageTextView
        android:id="@+id/thanks_for_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/threads_thanks_for_rate"
        android:textColor="@color/threads_gray_text"
        android:gravity="center"
        android:visibility="gone"/>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/threads_grey_aaa"/>


</LinearLayout>