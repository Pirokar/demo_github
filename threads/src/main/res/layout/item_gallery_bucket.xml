<?xml version="1.0" encoding="utf-8"?>
<im.threads.internal.views.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/threads_image_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="bottom"
        android:background="#99000000"
        android:orientation="horizontal">

        <im.threads.internal.widget.CustomFontTextView
            android:id="@+id/bucket_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingLeft="@dimen/margin_quarter"
            android:text="Camera"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_regular"/>

        <im.threads.internal.widget.CustomFontTextView
            android:id="@+id/photos_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/margin_half"
            android:text="12"
            android:textColor="#979692"
            android:textSize="@dimen/text_regular"/>

    </LinearLayout>

</im.threads.internal.views.SquareLayout>
