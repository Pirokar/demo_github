<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/consult_avatar"
        android:layout_width="@dimen/threads_operator_photo_size"
        android:layout_height="@dimen/threads_operator_photo_size"
        android:layout_alignTop="@+id/timestamp"
        android:layout_below="@+id/image"
        android:layout_gravity="bottom|left"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginTop="@dimen/margin_big"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_toEndOf="@+id/consult_avatar"
        android:layout_marginEnd="@dimen/consultant_margin_right"
        android:layout_marginTop="@dimen/margin_quarter"
        android:minHeight="240dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/loaderImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignStart="@id/image"
        android:layout_alignEnd="@id/image"
        android:layout_alignTop="@id/image"
        android:layout_alignBottom="@id/image"
        android:src="@drawable/im_loading_themed"
        android:padding="75dp"
        android:minHeight="240dp"
        android:scaleType="fitCenter" />

    <im.threads.internal.widget.text_view.BubbleTimeTextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginEnd="@dimen/margin_half"
        android:background="@drawable/timestamp_incoming_underlayer"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        tools:text="10:19"
        android:textColor="@color/threads_incoming_message_time" />

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentTop="true"
        android:background="@color/threads_chat_highlighting"/>

    <View
        android:id="@+id/filter_second"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/filter"
        android:background="@color/threads_chat_highlighting"/>
</RelativeLayout>