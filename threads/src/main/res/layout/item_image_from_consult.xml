<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/margin_quarter"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/consultant_margin_left"
        android:layout_marginRight="@dimen/consultant_margin_right"
        android:background="@drawable/bubble_white"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sample_card" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/margin_half"
        android:layout_marginRight="@dimen/margin_half"
        android:background="@drawable/rect_gray"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="10:19"
        android:textColor="@android:color/white" />


    <ImageView
        android:id="@+id/consult_avatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/timestamp"
        android:layout_below="@+id/image"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_marginTop="@dimen/margin_big"
        android:src="@drawable/sample_consult_avatar_small"
        android:visibility="visible" />
    <View
        android:layout_alignParentTop="true"
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/consult_avatar"
        android:background="@color/blue_transparent" />
    <View
        android:id="@+id/filter_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_quarter"
        android:layout_below="@+id/filter"
        android:background="@color/blue_transparent" />
</RelativeLayout>