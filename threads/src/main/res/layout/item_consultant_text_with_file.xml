<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemview_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/phrase_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/consultBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/consultant_margin_left"
            android:layout_marginRight="@dimen/consultant_margin_right"
            android:background="@drawable/bubble_white"
            android:orientation="vertical"
            android:padding="@dimen/margin_half">

            <LinearLayout
                android:id="@+id/right_text_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_quarter"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.sequenia.threads.views.CircularProgressButton
                    android:id="@+id/button_download"
                    style="@style/CircularProgressButtonStyle"
                    app:completed_drawable="@drawable/ic_insert_file_blue_36dp"
                    app:in_progress_label="@drawable/ic_clear_blue_36dp"
                    app:start_download_label="@drawable/ic_vertical_align_bottom_24dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginTop="2dp"
                        android:paddingRight="80dp"
                        android:text="Иван Петров"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/file_specs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginTop="2dp"

                        android:text="счет на оплату 1,2mb dfffffffffffffffffdddddddddddddddddddddddddddddddddddddddddddddddd"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/send_at"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_half"
                        android:layout_marginTop="2dp"
                        android:text="отправлено 21 апр 2016"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="2dp"
                    android:padding="4dp"
                    android:text="10:19"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="textetxtetex &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </FrameLayout>
