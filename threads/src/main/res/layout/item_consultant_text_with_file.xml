<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/consultAvatar"
        android:layout_width="@dimen/threads_operator_photo_size"
        android:layout_height="@dimen/threads_operator_photo_size"
        android:layout_below="@+id/bubble"
        android:layout_marginStart="@dimen/margin_half"
        android:layout_marginTop="@dimen/consultant_photo_offset_size" />

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_below="@+id/bubble"
        android:layout_marginStart="@dimen/consultant_margin_right"
        android:layout_marginTop="@dimen/margin_material"
        android:textColor="@color/threads_error_red_df0000"
        android:textSize="@dimen/error_text_size"
        android:visibility="gone"
        tools:text="Some error text"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bubble"
        style="@style/consultBubble"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/consultAvatar"
        android:orientation="vertical"
        android:paddingStart="19dp"
        android:paddingEnd="0dp">

        <FrameLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_three_fourth"
                android:minWidth="240dp"
                android:minHeight="280dp" />

            <ImageView
                android:id="@+id/loaderImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_three_fourth"
                android:minWidth="240dp"
                android:minHeight="280dp"
                android:padding="60dp"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rightTextRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_half">

            <ImageView
                android:id="@+id/fileImage"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_half"
                android:visibility="gone" />

            <im.threads.ui.views.CircularProgressButton
                android:id="@+id/buttonDownload"
                style="@style/CircularProgressButtonStyle" />

            <View
                android:id="@+id/delimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <im.threads.ui.widget.textView.QuoteAuthorTextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_material"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textStyle="bold"
                    tools:text="Иван Петров" />

                <im.threads.ui.widget.textView.QuoteMessageTextView
                    android:id="@+id/fileSpecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/threads_incoming_message_text"
                    tools:text="счет на оплату очень длинное название очень длинное название очень длинное название.pdf" />

                <im.threads.ui.widget.textView.QuoteTimeTextView
                    android:id="@+id/sendAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="12sp"
                    tools:text="отправлено 21 апр 2016" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/phraseFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <im.threads.ui.widget.textView.BubbleMessageTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:lineSpacingMultiplier="1.25"
                android:autoLink="none"
                android:paddingStart="4dp"
                android:paddingTop="5dp"
                android:paddingEnd="0dp"
                android:textColor="@color/threads_incoming_message_text"
                android:textSize="16sp"
                app:last_line_extra_padding_symbols="@dimen/last_line_extra_padding_symbols"
                tools:text="text text text text google.com" />

            <im.threads.ui.widget.textView.BubbleTimeTextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                android:textColor="@color/threads_operator_message_timestamp"
                tools:text="10:19" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/ogDataLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/og_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginStart="@dimen/margin_material"
                    android:minWidth="240dp"
                    android:scaleType="fitCenter" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_material"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="@dimen/margin_half"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="My Awesome Site Title" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_material"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    tools:text="My Awesome Site Descripton. Here I would write all awesome info" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_material"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/margin_half"
                    android:paddingEnd="60dp"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="http://my.awesome.site.com" />
            </LinearLayout>

            <im.threads.ui.widget.textView.BubbleTimeTextView
                android:id="@+id/ogTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                android:textColor="@color/threads_operator_message_timestamp"
                tools:text="10:19" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>