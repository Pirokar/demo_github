<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bubble"
        android:layout_alignParentTop="true"
        android:background="@color/threads_chat_highlighting" />

    <View
        android:id="@+id/filter_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_offset_size"
        android:layout_below="@+id/bubble"
        android:background="@color/threads_chat_highlighting" />

    <ImageView
        android:id="@+id/consult_avatar"
        android:layout_width="@dimen/threads_operator_photo_size"
        android:layout_height="@dimen/threads_operator_photo_size"
        android:layout_below="@+id/bubble"
        android:layout_marginLeft="@dimen/margin_half"
        android:layout_marginTop="@dimen/consultant_photo_offset_size"
        tools:src="@drawable/threads_operator_avatar_placeholder" />

    <LinearLayout
        android:id="@+id/bubble"
        style="@style/consultBubble"
        android:layout_width="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/consult_avatar"
        android:background="@drawable/thread_incoming_bubble"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:minWidth="240dp" />

        <LinearLayout
            android:id="@+id/right_text_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin_half">

            <im.threads.internal.views.CircularProgressButton
                android:id="@+id/button_download"
                style="@style/CircularProgressButtonStyle"
                android:background="@color/threads_chat_background"
                app:completed_drawable="@drawable/file_image_consult"
                app:in_progress_label="@drawable/ic_clear_blue_consult_36dp"
                app:start_download_label="@drawable/ic_vertical_align_bottom_consult_24dp" />

            <View
                android:id="@+id/delimeter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@color/threads_chat_icons_tint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <im.threads.internal.widget.text_view.QuoteAuthorTextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingRight="80dp"
                    android:text="Иван Петров"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textStyle="bold" />

                <im.threads.internal.widget.text_view.QuoteMessageTextView
                    android:id="@+id/file_specs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:text="счет на оплату очень длинное название очень длинное название очень длинное название.pdf"
                    android:textColor="@color/threads_incoming_message_text" />

                <im.threads.internal.widget.text_view.QuoteTimeTextView
                    android:id="@+id/send_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:text="отправлено 21 апр 2016"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/phrase_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_big"
            android:paddingBottom="5dp">

            <im.threads.internal.widget.text_view.BubbleMessageTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:autoLink="web"
                android:lineSpacingMultiplier="1.25"
                android:paddingTop="5dp"
                android:text="text text text text google.com"
                android:textColor="@color/threads_incoming_message_text"
                android:textColorLink="@color/threads_incoming_message_link"
                android:textSize="16sp"
                app:last_line_padding_symbols="10" />

            <im.threads.internal.widget.text_view.BubbleTimeTextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingRight="4dp"
                android:text="10:19"
                android:textColor="@color/threads_operator_message_timestamp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/og_data_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/og_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:minWidth="240dp" />

                <im.threads.internal.widget.text_view.BubbleMessageTextView
                    android:id="@+id/og_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="@dimen/margin_half"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="My Awesome Site Title" />

                <im.threads.internal.widget.text_view.BubbleMessageTextView
                    android:id="@+id/og_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    tools:text="My Awesome Site Descripton. Here I would write all awesome info" />

                <im.threads.internal.widget.text_view.BubbleMessageTextView
                    android:id="@+id/og_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="@dimen/margin_half"
                    android:paddingRight="60dp"
                    android:textColor="@color/threads_incoming_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="http://my.awesome.site.com" />
            </LinearLayout>

            <im.threads.internal.widget.text_view.BubbleTimeTextView
                android:id="@+id/og_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingRight="4dp"
                android:text="10:19"
                android:textColor="@color/threads_operator_message_timestamp" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>