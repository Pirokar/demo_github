                 android:id="@+id/phrase_frame"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="right"
                 android:gravity="right">

                 <TextView
                     android:id="@+id/text"
                     android:layout_width="wrap_content"
