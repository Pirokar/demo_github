<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bubble"
        style="@style/userBubble"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_half"
        android:paddingEnd="19dp"
        android:paddingBottom="@dimen/margin_quarter">

        <TableRow
            android:id="@+id/quoteTextRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:paddingTop="@dimen/margin_quarter">

            <ImageView
                android:id="@+id/quoteImage"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_half"
                android:visibility="gone" />

            <View
                android:id="@+id/quoteDelimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_quarter"
                android:layout_marginTop="@dimen/margin_quarter"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="2dp">

                <im.threads.ui.widget.textView.QuoteAuthorTextView
                    android:id="@+id/quoteTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="80dp"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textStyle="bold"
                    tools:text="Иван Петров" />

                <im.threads.ui.widget.textView.QuoteMessageTextView
                    android:id="@+id/quoteFileSpecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/threads_outgoing_message_text"
                    tools:text="счет на оплату 1,2mb 436666666666364" />

                <im.threads.ui.widget.textView.QuoteTimeTextView
                    android:id="@+id/quoteSendAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textSize="12sp"
                    tools:text="отправлено 21 апр 2016" />
            </LinearLayout>
        </TableRow>

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_quarter">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginEnd="@dimen/margin_three_fourth"
                android:minWidth="240dp" />

        </FrameLayout>

        <TableRow
            android:id="@+id/rightTextRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:visibility="gone"
            android:paddingTop="@dimen/margin_quarter">

            <im.threads.ui.views.CircularProgressButton
                android:id="@+id/buttonDownload"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_half"
                android:layout_marginBottom="@dimen/margin_half"
                android:background="@drawable/threads_ic_file_outline_24dp"
                android:visibility="gone"
                app:completed_drawable="@drawable/threads_ic_file_outline_24dp"
                app:in_progress_label="@drawable/threads_ic_clear_36dp"
                app:start_download_label="@drawable/threads_ic_vertical_align_bottom_18dp" />

            <ImageView
                android:id="@+id/loader"
                android:layout_width="@dimen/threads_operator_photo_size"
                android:layout_height="@dimen/threads_operator_photo_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_material"
                android:layout_marginTop="@dimen/margin_material"
                android:layout_marginEnd="@dimen/margin_three_fourth"
                android:layout_marginBottom="@dimen/margin_material"
                android:visibility="gone" />

            <View
                android:id="@+id/delimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_quarter"
                android:layout_marginTop="@dimen/margin_quarter"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="2dp">

                <im.threads.ui.widget.textView.QuoteAuthorTextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/margin_half"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textStyle="bold"
                    tools:text="Иван Петров" />

                <im.threads.ui.widget.textView.QuoteMessageTextView
                    android:id="@+id/fileSpecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/threads_outgoing_message_text"
                    tools:text="счет на оплату 1,2mb 436666666666364" />

                <im.threads.ui.widget.textView.QuoteTimeTextView
                    android:id="@+id/sendAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textSize="12sp"
                    tools:text="отправлено 21 апр 2016" />
            </LinearLayout>
        </TableRow>

        <FrameLayout
            android:id="@+id/phraseFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <im.threads.ui.widget.textView.BubbleMessageTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lineSpacingMultiplier="1.25"
                android:paddingStart="4dp"
                android:paddingTop="5dp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/margin_half"
                android:textColor="@color/threads_outgoing_message_text"
                android:textSize="16sp"
                app:last_line_extra_padding_symbols="@dimen/last_line_extra_padding_symbols"
                tools:text="user text google.com" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/voiceMessage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageButton
                    android:id="@+id/voiceMessageUserButtonPlayPause"
                    android:layout_width="@dimen/threads_file_icon_size"
                    android:layout_height="@dimen/threads_file_icon_size"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:layout_marginStart="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/threads_voice_message_play"
                    android:contentDescription="@string/threads_play_button" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/voiceMessageUserSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.ChatCenter.Slider.User"
                    android:layout_marginTop="-11dp"
                    app:thumbRadius="@dimen/thumb_size"
                    app:haloRadius="@dimen/halo_radius"
                    app:layout_constraintStart_toEndOf="@+id/voiceMessageUserButtonPlayPause"
                    app:layout_constraintTop_toTopOf="@id/voiceMessageUserButtonPlayPause"
                    app:layout_constraintEnd_toEndOf="parent" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/fileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_small"
                    android:layout_marginTop="-11dp"
                    android:layout_marginStart="@dimen/margin_half"
                    android:textColor="@color/threads_outgoing_message_text"
                    app:layout_constraintStart_toStartOf="@+id/voiceMessageUserSlider"
                    app:layout_constraintTop_toBottomOf="@+id/voiceMessageUserSlider"
                    tools:text="1:20" />

                <im.threads.ui.widget.textView.BubbleTimeTextView
                    android:id="@+id/voiceTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/fileSize"
                    app:layout_constraintEnd_toEndOf="@id/voiceMessageUserSlider"
                    android:drawablePadding="@dimen/margin_half"
                    android:padding="@dimen/margin_half"
                    android:textColor="@color/threads_user_message_timestamp"
                    tools:text="10:19" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <im.threads.ui.widget.textView.BubbleTimeTextView
                android:id="@+id/timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:drawablePadding="@dimen/margin_half"
                android:padding="@dimen/margin_half"
                android:textColor="@color/threads_user_message_timestamp"
                tools:text="10:19" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/ogDataLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/og_image"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:minWidth="240dp"
                    android:scaleType="fitCenter" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="@dimen/margin_half"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="My Awesome Site Title" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textSize="16sp"
                    tools:text="My Awesome Site Descripton. Here I would write all awesome info" />

                <im.threads.ui.widget.textView.BubbleMessageTextView
                    android:id="@+id/og_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_quarter"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="0dp"
                    android:paddingTop="@dimen/margin_half"
                    android:paddingEnd="74dp"
                    android:textColor="@color/threads_outgoing_message_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="http://my.awesome.site.com" />
            </LinearLayout>

            <im.threads.ui.widget.textView.BubbleTimeTextView
                android:id="@+id/ogTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:drawablePadding="@dimen/margin_quarter"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/margin_half"
                android:textColor="@color/threads_user_message_timestamp"
                tools:text="10:19" />
        </FrameLayout>
    </LinearLayout>

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_below="@+id/bubble"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_half"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/consultant_margin_right"
        android:textColor="@color/threads_error_red_df0000"
        android:textSize="@dimen/error_text_size"
        android:visibility="gone"
        tools:text="Some error text"
        tools:visibility="visible" />
</RelativeLayout>