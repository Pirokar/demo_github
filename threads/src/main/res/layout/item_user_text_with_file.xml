<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_quarter"
        android:layout_alignBottom="@+id/bubble"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/bubble"
        android:background="@color/threads_chat_highlighting"/>

    <View
        android:id="@+id/filter_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_quarter"
        android:layout_below="@+id/bubble"
        android:background="@color/threads_chat_highlighting"/>

    <LinearLayout
        android:id="@+id/bubble"
        style="@style/userBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_quarter"
        android:paddingLeft="@dimen/margin_quarter"
        android:paddingRight="19dp"
        android:paddingTop="@dimen/margin_quarter"
        android:background="@drawable/thread_outgoing_bubble">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:minWidth="240dp"/>

        <TableRow
            android:id="@+id/right_text_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/margin_quarter"
            android:paddingTop="@dimen/margin_quarter">

            <im.threads.views.CircularProgressButton
                android:id="@+id/button_download"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_half"
                android:layout_marginTop="@dimen/margin_half"
                android:background="@drawable/file_image_user"
                app:completed_drawable="@drawable/file_image_user"
                app:in_progress_label="@drawable/ic_clear_blue_user_36dp"
                app:start_download_label="@drawable/ic_vertical_align_bottom_user_24dp" />

            <View
                android:id="@+id/delimeter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_quarter"
                android:layout_marginTop="@dimen/margin_quarter"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="2dp">

                <im.threads.widget.text_view.QuoteAuthorTextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingRight="80dp"
                    android:text="Иван Петров"
                    android:textStyle="bold"
                    android:textColor="@color/threads_outgoing_message_text"/>

                <im.threads.widget.text_view.QuoteMessageTextView
                    android:id="@+id/file_specs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:text="счет на оплату 1,2mb 436666666666364"
                    android:textColor="@color/threads_outgoing_message_text"/>

                <im.threads.widget.text_view.QuoteTimeTextView
                    android:id="@+id/send_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_half"
                    android:layout_marginTop="2dp"
                    android:text="отправлено 21 апр 2016"
                    android:textSize="12sp"
                    android:textColor="@color/threads_outgoing_message_text"/>
            </LinearLayout>
        </TableRow>

        <FrameLayout
            android:id="@+id/phrase_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <im.threads.widget.text_view.BubbleMessageTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="@dimen/margin_half"
                android:paddingLeft="4dp"
                android:paddingTop="5dp"
                android:text="user text"
                android:layout_marginRight="74dp"
                android:textColor="@color/threads_outgoing_message_text"
                android:textSize="16sp" />

            <im.threads.widget.text_view.BubbleTimeTextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:drawablePadding="@dimen/margin_quarter"
                android:padding="@dimen/margin_half"
                android:textColor="@color/threads_user_message_timestamp"
                android:text="10:19" />

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>