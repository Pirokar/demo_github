<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <im.threads.ui.widget.textView.BubbleMessageTextView
        android:id="@+id/ask_for_rate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/ecc_chat_system_message"
        android:text="@string/ecc_ask_to_rate"
        android:gravity="center"/>

    <im.threads.ui.widget.Rating
        android:id="@+id/mark"
        android:layout_margin="@dimen/ecc_activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical">
    </im.threads.ui.widget.Rating>

    <im.threads.ui.widget.textView.BubbleMessageTextView
        android:id="@+id/thanks_for_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ecc_thanks_for_rate"
        android:textColor="@color/ecc_chat_system_message"
        android:gravity="center"
        android:visibility="gone"/>


</LinearLayout>