<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/root_big">

    <ImageView

        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:layout_width="56dp"
        android:layout_height="56dp"
       android:padding="@dimen/margin_half" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/image_small"
        android:layout_alignBottom="@+id/image"
        android:layout_alignRight="@+id/image"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_quarter"
        android:layout_marginTop="@dimen/margin_half"
        android:layout_toRightOf="@+id/image"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/consult_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView

            android:id="@+id/attach_image"
            android:layout_width="18sp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_marginLeft="1dp"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp"
            android:textColor="#90000000" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/delimeter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/image"
        android:background="#c3c3c3" />

    <Button
        android:textAllCaps="true"
        android:id="@+id/reply"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/delimeter"
        android:background="@null"
        android:layout_marginLeft="-40dp"
        android:drawableLeft="@drawable/ic_reply_gray_24dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_small" />
</RelativeLayout>