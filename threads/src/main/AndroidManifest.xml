<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="im.threads">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>

    <application
        android:hardwareAccelerated="true"
        android:largeHeap="true">
        <activity
            android:name="im.threads.view.ChatActivity"
            android:launchMode="singleTop"
            android:theme="@style/ThreadsStyle"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity
            android:name=".internal.activities.ConsultActivity"
            android:theme="@style/ThreadsStyleConsultPage"/>
        <activity
            android:name=".internal.activities.FilesActivity"
            android:theme="@style/ThreadsStyle"/>
        <activity
            android:name=".internal.activities.GalleryActivity"
            android:theme="@style/ThreadsGalleryStyle"/>
        <activity
            android:name=".internal.activities.CameraActivity"
            android:theme="@style/ThreadsGalleryStyle"/>
        <activity
            android:name=".internal.activities.ImagesActivity"
            android:theme="@style/ThreadsGalleryStyle"/>
        <activity
            android:name=".internal.activities.QuickAnswerActivity"
            android:label=""
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:screenOrientation="unspecified"
            android:theme="@style/Translucent"/>
        <activity
            android:name=".internal.permissions.PermissionsActivity"
            android:label="@string/threads_permissions_help"
            android:screenOrientation="unspecified"
            android:theme="@style/Transparent"/>

        <service
            android:name="im.threads.push.ThreadsPushServerIntentService"
            android:exported="false"/>
        <service
            android:name=".internal.services.DownloadService"
            android:exported="false"/>
        <service
            android:name=".internal.services.NotificationService"
            android:exported="false"/>

        <meta-data
            android:name="com.pushserver.android.service"
            android:value="im.threads.push.ThreadsPushServerIntentService"/>

        <service android:name=".push.ThreadsPushFcmIntentService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name=".internal.utils.ThreadsFileProvider"
            android:authorities="${applicationId}.im.threads.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

    </application>

</manifest>
