<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sequenia.appwithchat.polarbear">

    <!-- Brooma
         If you need brooma:
         1. change flavor to brooma
         2. change package above to "com.sequenia.appwithchatdev"
    -->
    <!-- Polarbear
         If you need polarbear:
         1. change flavor to polarbear
         2. change package above to "com.sequenia.appwithchat.polarbear"
    -->
    <!-- Winlab
         If you need winlab:
         1. change flavor to winlab
         2. change package above to "com.sequenia.appwithchat.beta4"
    -->

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <permission
        android:name="${applicationId}.permission.pushserver.RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.google.android.c2dm.permission.SEND" />
    <uses-permission android:name="${applicationId}.permission.pushserver.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name1"
        android:theme="@style/AppTheme"
        tools:replace="android:label">

        <receiver
            android:name="im.threads.broadcastReceivers.MainPBReceiver"
            android:exported="false"
            android:permission="${applicationId}.permission.pushserver.RECEIVE">
            <intent-filter>
                <action android:name="com.pushserver.android.NEW_PUSH_MESSAGE_EVENT" />
                <action android:name="com.pushserver.android.RECEIVER_CHANGED_EVENT" />
                <action android:name="com.pushserver.android.DEVICE_ADDRESS_CHANGED_EVENT" />
                <action android:name="com.pushserver.android.ERROR_EVENT" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.pushserver.android.service"
            android:value="im.threads.services.IncomingMessagesIntentService" />
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7dea244530b440655e927fed9654a59108f414bc" />
        <meta-data
            android:name="com.pushserver.android.senderId"
            android:value="!STRING!1079639835466" />
        <meta-data
            android:name="com.pushserver.android.serverUrl"
            android:value="https://pushserver.mfms.ru/brooma" />
        <meta-data
            android:name="com.pushserver.android.logs"
            android:value="true" />
        <meta-data
            android:name="com.pushserver.android.location"
            android:value="true" />
        <meta-data
            android:name="com.pushserver.android.heartbeatInterval"
            android:value="300000" />
        <meta-data
            android:name="com.pushserver.android.uploadServerUrl"
            android:value="https://pushserver.mfms.ru/brooma/file/upload" />
    </application>

</manifest>