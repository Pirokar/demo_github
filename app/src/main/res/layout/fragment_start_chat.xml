<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appCode.activity.MainActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="@dimen/ecc_toolbar_button_width"
        android:layout_height="@dimen/ecc_toolbar_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        app:srcCompat="@drawable/ecc_ic_arrow_back_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:srcCompat="@drawable/logo" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goToChat"
        style="@style/ButtonsStyle"
        android:layout_marginTop="@dimen/margin_top_start_chat_btn"
        android:text="@string/go_to_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/about"
        style="@style/LogoTextStyle"
        android:layout_marginBottom="@dimen/login_screen_top_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Server: mobile1\nUser: 533\nApi Version: 15" />

</androidx.constraintlayout.widget.ConstraintLayout>