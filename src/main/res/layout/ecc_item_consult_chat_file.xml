<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/consult_avatar"
        android:layout_width="@dimen/ecc_operator_photo_size"
        android:layout_height="@dimen/ecc_operator_photo_size"
        android:layout_alignBottom="@id/bubble"
        android:layout_marginStart="@dimen/ecc_margin_half"
        tools:src="@drawable/ecc_operator_avatar_placeholder" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bubble"
        style="@style/consultBubble"
        android:layout_toEndOf="@+id/consult_avatar"
        android:background="@drawable/ecc_incoming_bubble">

        <LinearLayout
            android:id="@+id/quoteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/ecc_margin_half"
            android:paddingBottom="@dimen/ecc_margin_half"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/quoteFileImage"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/ecc_margin_half"
                android:layout_marginEnd="@dimen/ecc_margin_three_fourth"
                android:layout_marginBottom="@dimen/ecc_margin_half"
                android:visibility="gone" />

            <im.threads.ui.views.CircularProgressButton
                android:id="@+id/quoteButtonDownload"
                style="@style/CircularProgressButtonStyle" />

            <View
                android:id="@+id/quoteDelimiter"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ecc_margin_half"
                android:layout_marginBottom="@dimen/ecc_margin_half" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <im.threads.ui.widget.textView.QuoteAuthorTextView
                    android:id="@+id/quoteTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ecc_margin_half"
                    android:layout_marginTop="2dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/ecc_margin_material"
                    android:textColor="@color/ecc_incoming_message_text"
                    android:textStyle="bold"
                    tools:text="Иван Петров" />

                <im.threads.ui.widget.textView.QuoteMessageTextView
                    android:id="@+id/quoteFileSpecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ecc_margin_half"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="@dimen/ecc_margin_half"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/ecc_incoming_message_text"
                    tools:text="счет на оплату очень длинное название очень длинное название очень длинное название.pdf" />

                <im.threads.ui.widget.textView.QuoteTimeTextView
                    android:id="@+id/quoteSendAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ecc_margin_half"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/ecc_incoming_message_text"
                    android:textSize="12sp"
                    tools:text="отправлено 21 апр 2016" />
            </LinearLayout>
        </LinearLayout>

        <im.threads.ui.views.CircularProgressButton
            android:id="@+id/circ_button"
            style="@style/CircularProgressButtonStyle"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_three_fourth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quoteLayout" />

        <ImageView
            android:id="@+id/loader"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ecc_im_loading_consult" />

        <View
            android:id="@+id/delimiter"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ecc_margin_half"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:layout_marginBottom="@dimen/ecc_margin_half"
            android:background="@color/ecc_incoming_message_text"
            android:minHeight="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/loader"
            app:layout_constraintTop_toBottomOf="@id/quoteLayout" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ecc_margin_three_fourth"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:textColor="@color/ecc_incoming_message_text"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/delimiter"
            app:layout_constraintTop_toBottomOf="@id/quoteLayout"
            tools:text="счет на.pdf" />

        <im.threads.ui.widget.textView.BubbleMessageTextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ecc_margin_three_fourth"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:paddingBottom="@dimen/ecc_margin_half"
            android:textColor="@color/ecc_incoming_message_text"
            app:layout_constraintStart_toEndOf="@+id/delimiter"
            app:layout_constraintTop_toBottomOf="@+id/header"
            tools:text="1,2 mb" />

        <im.threads.ui.widget.textView.BubbleTimeTextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ecc_margin_half"
            android:textColor="@color/ecc_operator_message_timestamp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10:19" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <im.threads.ui.widget.textView.BubbleTimeTextView
        android:id="@+id/errorText"
        style="@style/timestamp"
        android:layout_below="@+id/bubble"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/ecc_margin_half"
        android:paddingStart="60dp"
        android:paddingEnd="0dp"
        android:textSize="@dimen/ecc_error_text_size"
        android:visibility="visible"
        tools:text="10:19" />

</RelativeLayout>